<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.volmit</groupId>
  <artifactId>React</artifactId>
  <name>React</name>
  <version>6</version>
  <description>A performance plugin</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.yml</include>
          <include>**/*.txt</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>surge:Surge</include>
                </includes>
                <excludes>
                  <exclude>org.spigotmc:spigot-api</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>development</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>runbatchfile</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <executable>${script.development}</executable>
              <arguments>
                <argument>${react.release.target}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>runbatchfile</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>C:\Users\cyberpwn\Documents\development\workspace\React6/compile\release.bat</executable>
                  <arguments>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/target/React-6.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/in.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/mapping.txt</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/mapping.txt</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/in.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/React-6-origin.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/out.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/React-6.jar</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <executable>C:\Users\cyberpwn\Documents\development\workspace\React6/compile\release.bat</executable>
              <arguments>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/target/React-6.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/in.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/mapping.txt</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/mapping.txt</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/in.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/React-6-origin.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/compile/out.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\React6/release/6/React-6.jar</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>surge</id>
      <url>https://raw.githubusercontent.com/cyberpwnn/Surge/master/repository/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>spigot.org</groupId>
      <artifactId>spigot-1.12.2</artifactId>
      <version>1.12.1</version>
      <scope>system</scope>
      <systemPath>${react.libs}/spigot-1.12.2.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <react.development.location>${user.home}\Documents\development\servers\dynamic\plugins\${project.name}.jar</react.development.location>
    <react.plugin.authors>cyberpwn, Puretie</react.plugin.authors>
    <react.release.target>${react.target}/${react.release.name}.jar</react.release.target>
    <react.target>${project.basedir}/target</react.target>
    <react.export.out>${project.basedir}/compile/out.jar</react.export.out>
    <react.release.compile>${react.compile}/in.jar</react.release.compile>
    <react.export.script>${project.basedir}/compile/obfuscate.bat</react.export.script>
    <react.plugin.name>${project.name}</react.plugin.name>
    <maven.compiler.source>1.8</maven.compiler.source>
    <script.release>${react.compile}\release.bat</script.release>
    <react.release>${project.basedir}/release/${project.version}</react.release>
    <exp3>${react.compile}/out.jar</exp3>
    <exp2>${react.compile}/in.jar</exp2>
    <exp1>${react.compile}/mapping.txt</exp1>
    <react.plugin.description>${project.description}</react.plugin.description>
    <react.release.name>${project.name}-${project.version}</react.release.name>
    <react.plugin.main>com.volmit.react.React</react.plugin.main>
    <maven.compiler.target>1.8</maven.compiler.target>
    <react.scripts>${project.basedir}\scripts</react.scripts>
    <script.copy>${react.scripts}\copy.bat</script.copy>
    <oexp3>${react.release}/${project.name}-${project.version}.jar</oexp3>
    <react.util>${project.basedir}/util</react.util>
    <react.plugin.version>${project.version}</react.plugin.version>
    <react.compile>${project.basedir}/compile</react.compile>
    <oexp2>${react.release}/${project.name}-${project.version}-origin.jar</oexp2>
    <script.development>${react.scripts}\development.bat</script.development>
    <react.export.mapping>${project.basedir}/compile/mapping.txt</react.export.mapping>
    <oexp1>${react.release}/mapping.txt</oexp1>
    <react.export.in>${project.basedir}/compile/in.jar</react.export.in>
    <react.libs>${project.basedir}/lib</react.libs>
  </properties>
</project>

