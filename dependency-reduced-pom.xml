<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.volmit</groupId>
  <artifactId>React</artifactId>
  <name>React</name>
  <version>6</version>
  <description>A performance plugin</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.yml</include>
          <include>**/*.txt</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>surge:Surge</include>
                </includes>
                <excludes>
                  <exclude>org.spigotmc:spigot-api</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>development</id>
      <build />
    </profile>
    <profile>
      <id>release</id>
      <build />
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>surge</id>
      <url>https://raw.githubusercontent.com/cyberpwnn/Surge/master/repository/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.12.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-lang</artifactId>
          <groupId>commons-lang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-simple</artifactId>
          <groupId>com.googlecode.json-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>guava</artifactId>
          <groupId>com.google.guava</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gson</artifactId>
          <groupId>com.google.code.gson</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bungeecord-chat</artifactId>
          <groupId>net.md-5</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <react.compile>${project.basedir}/compile</react.compile>
    <react.release.name>${project.name}-${project.version}</react.release.name>
    <react.scripts>${project.basedir}/scripts</react.scripts>
    <maven.compiler.target>1.8</maven.compiler.target>
    <script.development>${react.scripts}/development.bat</script.development>
    <react.plugin.name>${project.name}</react.plugin.name>
    <react.util>${project.basedir}/util</react.util>
    <react.plugin.authors>cyberpwn, Puretie</react.plugin.authors>
    <react.plugin.main>com.volmit.react.React</react.plugin.main>
    <react.libs>${project.basedir}/lib</react.libs>
    <react.plugin.description>${project.description}</react.plugin.description>
    <script.release>${react.scripts}/release.bat</script.release>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>

